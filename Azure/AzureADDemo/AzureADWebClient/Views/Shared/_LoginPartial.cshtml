@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">Usuário: @User.Identity.Name!</li>
        <li><a asp-area="AzureAD" asp-controller="Account" asp-action="Logout">Sair</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Login</a></li>
    </ul>
}
